@model Auction
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <ul class="nav navbar-nav pull-right">
            <li><a asp-area="" asp-controller="Home" asp-action="Dashboard">Home</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Logout</a></li>
        </ul>
    </div>
</nav>

<h1>New Auction</h1>
<hr>

<form asp-action="CreateNewAuction" asp-controller="Home" method="post">
    <span asp-validation-for="Name"></span><br>
    <label asp-for="Name"></label>
    <input type="text" asp-for="Name">
    <br>

    <span asp-validation-for="Description"></span><br>
    <label asp-for="Description"></label>
    <input type="text" asp-for="Description">
    <br>

    <span asp-validation-for="StartingBid"></span><br>
    <label asp-for="StartingBid"></label>
    <input type="number" step="0.01" asp-for="StartingBid">
    <br>

    <span>@ViewBag.Errors</span>
    <span asp-validation-for="EndDate"></span><br>
    <label>End Date</label>
    <input type="Date" asp-for="EndDate">
    <br>

    <input type="submit" value="Create Auction">
</form>